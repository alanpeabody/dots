bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle

# Switch between headphones & output
bindsym $mod+XF86AudioRaiseVolume exec --no-startup-id pactl set-default-sink alsa_output.pci-0000_01_00.1.hdmi-stereo && pulseaudio -k && pulseaudio --start
bindsym $mod+XF86AudioLowerVolume exec --no-startup-id pactl set-default-sink alsa_output.pci-0000_00_1f.3.analog-stereo && pulseaudio -k && pulseaudio --start

